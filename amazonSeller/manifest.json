{
  "manifest_version": 3,
  "name": "ASIN Analyzer",
  "version": "1.1",
  "description": "Analyze ASINs for keywords, pricing, and product info using JungleScout API.",
  "action": {
    "default_icon": {
      "128": "icon-128.png"
    }
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "windows"
  ],
"host_permissions": [
  "https://*.amazon.com/*",
  "https://developer.junglescout.com/*",
  "https://public-api.junglescout.com/*",
  "https://api.sellerapp.com/*"
],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "chart.umd.min.js",
        "roi.html",
        "roi.js",
        "server-handler.js",
        "flow-selector.html",
        "flow-selector.js",
        "flow-selector-inline.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' https: data:;"
  }
}